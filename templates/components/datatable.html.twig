<!-- datatable div starts -->
{% set help_position =  crud_params.help.position | default('bottom') %}
<div id="{{dtoptions.htmlid}}_content" class="dtable-content sn-datatable {{dtoptions.dtclass}}">
    <div class="dt-helprow-top">
        {% if help_position == 'top' %}
            {% include crud_params.help.template | default('partials/help.html.twig') ignore missing 
                with { help: crud_params.help } %}
        {% endif %}
    </div>

    <table cellpadding="0" cellspacing="0" style="width:100%!important;" 
        class="table table-striped table-bordered dataTable srinivas {{dtoptions.tableclass}}" 
        border="0" id="{{dtoptions.htmlid}}" data-url="/datatable/testurl" 
        data-schema="testschema" 
    {% if (crud_params.parentdtid is not empty) %} parentdt="{{crud_params.parentdtid}}" {% endif %} 
    {% if (crud_params.childdtid is not empty) %} childdt="{{crud_params.childdtid}}" {% endif %} 
    {% if (dtoptions.source is not empty) %} data-source="{{dtoptions.source}}" {% endif %} >
        <thead class='dt-head'></thead>
        <tbody class='dt-body'>
            <tr class='dt-processing-row'>
                <td colspan="{{dtoptions.visible_columns|default(1)}}" class="dataTables_empty">
                    Loading data from server
                </td>
            </tr>
        </tbody>
        <tfoot class='dt-footer'></tfoot>
    </table>

    <div class="dt-helprow-bottom">
        {% if help_position == 'bottom' %}
            {% include crud_params.help.template | default('partials/help.html.twig') ignore missing 
                with { help: crud_params.help } %}
        {% endif %}
    </div>
</div>
<!-- datatable div ends -->
