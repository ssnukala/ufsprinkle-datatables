{
{% block common %}
    "name": "{{ column.name }}",
    "contentPadding": "{{ column.padding }}",
    "defaultContent": "{{ column.default }}",
    "render": $.fn.dataTable.render.format_column("{{ column.name }}"),
    "orderable": {{column.orderable?'true':'false'}},
    "searchable":{{column.searchable? 'true':'false'}},
    "title": "{{ column.title|raw }}",
    {% if column.type %}
        "type": "{{ column.type }}",
    {% endif %}
    "visible": {{column.visible ? 'true':'false'}},
    "className":"{{column.visible ? '':'never '}} {{column.class }}",
    {% if column.width is not empty %}
        "width": "{{ column.width }}",
    {% endif %}
{% endblock %}

{% block data %}
    "data": "{{ column.data }}"
{% endblock %}
},
